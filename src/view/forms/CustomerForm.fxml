<AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: yellow;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerForm">
    <children>
        <Button fx:id="btnNew" layoutX="324.0" layoutY="31.0" mnemonicParsing="false" onAction="#btnNew_OnAction" text="+ new" />
        <TextField fx:id="txtId" layoutX="14.0" layoutY="90.0" prefHeight="31.0" prefWidth="372.0" promptText="Customer id" />
        <TextField fx:id="txtName" layoutX="14.0" layoutY="132.0" prefHeight="31.0" prefWidth="372.0" promptText="Customer name" />
        <TextField fx:id="txtAddress" layoutX="14.0" layoutY="174.0" prefHeight="31.0" prefWidth="372.0" promptText="Customer address" />
        <Button fx:id="btnSave" layoutX="15.0" layoutY="224.0" mnemonicParsing="false" onAction="#btnSave_OnAction" prefHeight="31.0" prefWidth="77.0" text="Save" />
        <Button fx:id="btnDelete" layoutX="317.0" layoutY="224.0" mnemonicParsing="false" onAction="#btnDelete_OnAction" prefHeight="31.0" prefWidth="69.0" text="Delete" />
        <TableView fx:id="tblCustomer" layoutX="14.0" layoutY="263.0" prefHeight="324.0" prefWidth="372.0">
            <columns>
                <TableColumn prefWidth="88.0" text="id" />
                <TableColumn prefWidth="136.0" text="name" />
                <TableColumn prefWidth="147.0" text="address" />
            </columns>
        </TableView>
      <Button fx:id="btnBack" mnemonicParsing="false" onAction="#btnBack_OnAction" text="&lt;-" />
    </children>
</AnchorPane>
