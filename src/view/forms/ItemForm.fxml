        <TextField fx:id="txtId" layoutX="14.0" layoutY="84.0" prefHeight="31.0" prefWidth="372.0" promptText="id" />
        <TextField fx:id="txtName" layoutX="14.0" layoutY="128.0" prefHeight="31.0" prefWidth="372.0" promptText="name" />
